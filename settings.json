{
    "security.workspace.trust.untrustedFiles": "open",
    "editor.detectIndentation": false,
    "window.titleBarStyle": "custom",
    "workbench.editor.enablePreview": false,
    "editor.renderWhitespace": "none",
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "breadcrumbs.enabled": false,
    "zenMode.showTabs": "none",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "window.customTitleBarVisibility": "windowed",
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "settingsSync.ignoredSettings": [
        "-clangd.path"
    ],
    "c-cpp-compile-run.c-compiler": "clang",
    "c-cpp-compile-run.cpp-compiler": "clang++",
    "workbench.iconTheme": "material-icon-theme",
    "editor.codeActionsOnSave": {},
    "editor.fontSize": 17,
    "editor.minimap.showSlider": "always",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "workbench.colorCustomizations": {
        "terminalCursor.foreground": "#ffffffff", // 光标颜色
        "terminalCursor.background": "#ffffffff" // 光标背景颜色，确保光标在不同背景下可见
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "overrideName": true,
            "args": [
                "-NoExit",
                "/c",
                "chcp 65001;Remove-Item Alias:curl;cls",
            ],
            "icon": "terminal-powershell",
            "env": {
                "TEST_VAR": "value"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "workbench.layoutControl.enabled": false,
    "remote.SSH.remotePlatform": {
        "Arch": "linux"
    },
    "launch": {
        "configurations": [
            {
                "type": "lldb",
                "request": "launch",
                "program": "${fileDirname}/output/${fileBasenameNoExtension}",
                "name": "LLDBDebug"
            }
        ]
    },
    "diffEditor.ignoreTrimWhitespace": true,
    "cmake.configureSettings": {},
    "cmake.configureOnOpen": true,
    "workbench.statusBar.visible": false
}
